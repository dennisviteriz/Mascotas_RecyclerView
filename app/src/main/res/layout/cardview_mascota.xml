<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="278dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordes"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="351dp"
            android:layout_height="211dp"

            android:layout_marginTop="10dp"

            android:src="@drawable/mas1" />


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bordes"
           >

           <Button
               android:id="@+id/button2"
               android:layout_width="48dp"
               android:layout_height="34dp"
               android:layout_marginTop="12dp"

               android:layout_marginEnd="16dp"
               android:layout_marginRight="16dp"
               android:background="@drawable/ic_bone2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/tvNombreCV"
               android:layout_width="138dp"
               android:layout_height="wrap_content"

               android:layout_marginStart="68dp"
               android:layout_marginLeft="68dp"
               android:layout_marginTop="20dp"
               android:text="@string/dennis_viteri2"
               android:textSize="20sp"
               android:textStyle="bold"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/tvTelefonoCV"
               android:layout_width="31dp"
               android:layout_height="23dp"

               android:layout_marginTop="24dp"
               android:text="@string/telefonoCV"
               android:textSize="15sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toStartOf="@+id/button2"
               app:layout_constraintTop_toTopOf="parent" />

           <Button
               android:id="@+id/button"
               android:layout_width="48dp"
               android:layout_height="34dp"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"

               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:background="@drawable/ic_bone"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>